        <Button
            android:visibility="gone"
            android:id="@+id/ajustes"
            android:textSize="22dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajustes"
            android:gravity=""
            android:background="@color/white"/>

    </LinearLayout>

</RelativeLayout>