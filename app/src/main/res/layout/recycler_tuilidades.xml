<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp"
    cardview:cardCornerRadius="1sp">


    <LinearLayout
        android:id="@+id/linear_utilidades"
        android:background="@color/utilidades"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cuenta_repartidor"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Id"/>

        <TextView
            android:id="@+id/repartidor_recycler_utilidades"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Repartidor"/>

        <TextView
            android:id="@+id/fecha_recycler_utilidades"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="fecha"/>

        <TextView
            android:id="@+id/hora_recycler_utilidades"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Id"/>

        <TextView
            android:id="@+id/lugar_recycler_utiidades"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Lugar"/>

        <TextView
            android:id="@+id/cliente_recycler_utilidades"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cliente"/>

        <TextView
            android:id="@+id/telefono_recycler_utilidades"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="telefono"/>

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/vendidos_recycler_utlidades"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="vendidos"/>

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/producto_recycler_utlidades"
            android:singleLine="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Producto"/>

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/compra_recycler_utlidades"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="$ compra"/>

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/venta_recycler_utlidades"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="$ venta"/>


        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/ganancia_recycler_utlidades"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ganancia"/>

        <TextView
            android:id="@+id/estatus_recycler_utilidades"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="16dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cliente"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>