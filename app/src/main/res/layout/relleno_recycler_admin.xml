<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    cardview:cardCornerRadius="1sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto_repartidor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_home_black_24dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/nombre_repatidor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="nombre_del_repartidor" />

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="2sp"/>

            <TextView
                android:id="@+id/telefono_repartidor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Telefono" />

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="2sp"/>

            <TextView
                android:id="@+id/correo_repartidor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_error_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/estado_repartidor"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>