<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.UtilidadesActivity">

    <RelativeLayout
        android:id="@+id/Relative_toolbar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar"/>
    </RelativeLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha inicio"/>

        <TextView
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha fin"/>

    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:onClick="fecha_inicio"
            android:gravity="center_horizontal"
            android:textColor="@color/click"
            android:textSize="18dp"
            android:id="@+id/fecha_inicio_utilidades"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha inicio"/>

        <TextView
            android:onClick="fecha_fin"
            android:gravity="center_horizontal"
            android:textColor="@color/click"
            android:textSize="18dp"
            android:id="@+id/fecha_fina_utilidades"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha fin"/>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:paddingTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="CUENTA"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="REPARTIDOR"/>
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="HORA"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="LUGAR"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="CLIENTE"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="TELÃ‰FONO"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="VENDIDOS"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="PRODUCTO"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="$ COMPRA"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="$ VENTA"/>


                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="GANANCIA"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="ESTADO"/>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:padding="2dp"
                android:id="@+id/recycler_utilidades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL"
            android:layout_weight="2"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/total_utilidades"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</LinearLayout>